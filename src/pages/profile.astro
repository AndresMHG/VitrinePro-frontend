    function updateNavigationButtons(currentModalId: string) {
      const currentIndex = modalIds.indexOf(currentModalId);
      const prevBtn = document.querySelector(`#${currentModalId} .modal-nav-prev`) as HTMLButtonElement;
      const nextBtn = document.querySelector(`#${currentModalId} .modal-nav-next`) as HTMLButtonElement;

      if (prevBtn) {
        prevBtn.style.display = currentIndex > 0 ? 'block' : 'none';
      }
      if (nextBtn) {
        nextBtn.style.display = currentIndex < modalIds.length - 1 ? 'block' : 'none';
      }
    }

    function navigateModal(direction: 'prev' | 'next') {
      const activeModal = document.querySelector('.project-modal.active') as HTMLElement;
      if (!activeModal) return;

      const currentModalId = activeModal.id;
      const currentIndex = modalIds.indexOf(currentModalId);

      let newIndex;
      if (direction === 'prev' && currentIndex > 0) {
        newIndex = currentIndex - 1;
      } else if (direction === 'next' && currentIndex < modalIds.length - 1) {
        newIndex = currentIndex + 1;
      } else {
        return;
      }

      closeProjectModal();
      setTimeout(() => {
        openProjectModal(modalIds[newIndex]);
      }, 300); // Wait for close animation
    }

    function expandModal() {
      const activeModal = document.querySelector('.project-modal.active') as HTMLElement;
      if (!activeModal) return;

      const modalId = activeModal.id;
      const projectUrls: { [key: string]: string } = {
        'ecommerceModal': '/VitrinePro-frontend/project/ecommerce'
      };

      const url = projectUrls[modalId];
      if (url) {
        window.open(url, '_blank');
      }
    }

    function shareProject(platform: string) {
      const activeModal = document.querySelector('.project-modal.active') as HTMLElement;
      if (!activeModal) return;

      const title = activeModal.querySelector('.modal-title')?.textContent || 'Proyecto';
      const url = window.location.href;
      const text = `Mira este proyecto incre√≠ble: ${title}`;

      let shareUrl = '';

      switch (platform) {
        case 'linkedin':
          shareUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`;
          break;
        case 'instagram':
          // Instagram doesn't support direct sharing, copy to clipboard instead
          navigator.clipboard.writeText(`${text} ${url}`).then(() => {
            alert('Enlace copiado al portapapeles. Puedes pegarlo en Instagram.');
          });
          return;
        case 'whatsapp':
          shareUrl = `https://wa.me/?text=${encodeURIComponent(text + ' ' + url)}`;
          break;
        case 'pdf':
          generatePDF();
          return;
      }

      if (shareUrl) {
        window.open(shareUrl, '_blank', 'width=600,height=400');
      }
    }

    async function generatePDF() {
      const activeModal = document.querySelector('.project-modal.active') as HTMLElement;
      if (!activeModal) return;

      try {
        // Create QR Code for current page
        const qrCodeUrl = `https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=${encodeURIComponent(window.location.href)}`;

        // Get project data
        const title = activeModal.querySelector('.modal-title')?.textContent || 'Proyecto';
        const description = activeModal.querySelector('.modal-description')?.textContent || '';
        const category = activeModal.querySelector('.modal-category')?.textContent || '';

        // Create PDF content
        const pdfContent = `
          <div style="font-family: Arial, sans-serif; max-width: 800px; margin: 0 auto; padding: 20px;">
            <h1 style="color: #333; border-bottom: 2px solid #667eea; padding-bottom: 10px;">${title}</h1>
            <p style="color: #667eea; font-weight: bold;">${category}</p>

            <div style="margin: 30px 0;">
              <h2 style="color: #333;">Descripci√≥n del Proyecto</h2>
              <p style="line-height: 1.6;">${description}</p>
            </div>

            <div style="text-align: center; margin: 40px 0;">
              <img src="${qrCodeUrl}" alt="QR Code" style="max-width: 150px;" />
              <p style="margin-top: 10px; color: #666; font-size: 12px;">Escanea para ver el proyecto completo</p>
            </div>

            <div style="margin-top: 40px; padding-top: 20px; border-top: 1px solid #eee; text-align: center; color: #666; font-size: 12px;">
              Generado por VitrinePro - ${new Date().toLocaleDateString()}
            </div>
          </div>
        `;

        // Create blob and download
        const blob = new Blob([pdfContent], { type: 'text/html' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `${title.replace(/[^a-z0-9]/gi, '_').toLowerCase()}.html`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);

        alert('Archivo HTML generado. Puedes convertirlo a PDF usando un navegador o herramienta online.');

      } catch (error) {
        console.error('Error generating PDF:', error);
        alert('Error al generar el archivo. Int√©ntalo de nuevo.');
      }
    }

    // Event listeners for modal close buttons
    document.querySelectorAll('.modal-close').forEach(closeBtn => {
      closeBtn.addEventListener('click', closeProjectModal);
    });

    // Event listeners for modal overlays
    document.querySelectorAll('.modal-overlay').forEach(overlay => {
      overlay.addEventListener('click', closeProjectModal);
    });

    // Event listeners for navigation buttons
    document.querySelectorAll('.modal-nav').forEach(navBtn => {
      navBtn.addEventListener('click', (e) => {
        const direction = (e.currentTarget as HTMLElement).getAttribute('data-direction') as 'prev' | 'next';
        navigateModal(direction);
      });
    });

    // Event listeners for share buttons
    document.querySelectorAll('.share-btn').forEach(shareBtn => {
      shareBtn.addEventListener('click', (e) => {
        const platform = (e.currentTarget as HTMLElement).getAttribute('data-platform');
        if (platform) {
          shareProject(platform);
        }
      });
    });

    // Close modal on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeProjectModal();
      }
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      const activeModal = document.querySelector('.project-modal.active');
      if (!activeModal) return;

      if (e.key === 'ArrowLeft') {
        navigateModal('prev');
      } else if (e.key === 'ArrowRight') {
        navigateModal('next');
      }
    });

    // Project card click handlers - Map to specific modal IDs
    document.querySelectorAll('.project-link').forEach((link, index) => {
      link.addEventListener('click', (e) => {
        e.stopPropagation();

        // Map card index to modal ID
        const modalId = modalIds[index % modalIds.length];
        openProjectModal(modalId);
      });
    });
  });
</script>