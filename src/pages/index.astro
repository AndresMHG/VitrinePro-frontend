<style>
.main-content {
  min-height: calc(100vh - 140px);
}

/* Problemas Section */
.problems-section {
  padding: 80px 0;
  background: #fff;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.section-title {
  font-size: 2rem;
  font-weight: 700;
  color: #1a202c;
  text-align: center;
  margin-bottom: 3rem;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 60px;
  height: 4px;
  background: linear-gradient(135deg, #0A66C2, #004182);
  border-radius: 2px;
}

.problems-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
}

.problem-card {
  background: #fff;
  position: relative;
  padding: 2rem;
  border-radius: 16px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  text-align: center;
}

.problem-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
}

.problem-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.problem-card h3 {
  font-size: 1.3rem;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 1rem;
}

.problem-card p {
  color: #64748b;
  line-height: 1.6;
  font-size: 0.95rem;
}

/* Benefits Section */
.benefits-section {
  padding: 80px 0;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

.benefit-item {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  padding: 2rem;
  border-radius: 16px;
  text-align: center;
  border: 1px solid rgba(255, 255, 255, 0.2);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.benefit-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
}

.benefit-icon {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.benefit-item h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 0.5rem;
}

.benefit-item p {
  color: #64748b;
  line-height: 1.5;
  font-size: 0.9rem;
}

/* Examples Section */
.examples-section {
  padding: 80px 0;
  background: #fff;
}

.examples-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 2rem;
}

.example-card {
  background: #fff;
  position: relative;
  border-radius: 16px;
  padding: 2rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.example-card-link {
  text-decoration: none;
  display: block;
  cursor: pointer;
}

.example-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
}

.example-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.example-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  object-fit: cover;
  border: 3px solid #0A66C2;
}

.example-info h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #1a202c;
  margin: 0 0 0.25rem 0;
}

.example-info p {
  color: #64748b;
  font-size: 0.9rem;
  margin: 0;
}

.example-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 1.5rem;
  padding: 1rem 0;
  border-top: 1px solid #e5e7eb;
  border-bottom: 1px solid #e5e7eb;
}

.stat {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 1.5rem;
  font-weight: 700;
  color: #0A66C2;
}

.stat-label {
  font-size: 0.8rem;
  color: #64748b;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.example-skills {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.skill-tag {
  background: rgba(10, 102, 194, 0.1);
  color: #0A66C2;
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.8rem;
  font-weight: 500;
}

/* Final CTA Section */
.final-cta-section {
  padding: 80px 0;
  background: linear-gradient(135deg, #0A66C2 0%, #004182 100%);
  color: white;
  text-align: center;
}

.final-cta-content h2 {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  line-height: 1.2;
}

.final-cta-content p {
  font-size: 1.2rem;
  margin-bottom: 2rem;
  opacity: 0.9;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.6;
}

.final-cta-btn {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  background: white;
  color: #0A66C2;
  text-decoration: none;
  padding: 16px 32px;
  border-radius: 50px;
  font-size: 1.1rem;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}

.final-cta-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 35px rgba(0, 0, 0, 0.3);
}

.final-cta-btn svg {
  transition: transform 0.3s ease;
}

.final-cta-btn:hover svg {
  transform: translateX(3px);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .main-content {
    min-height: calc(100vh - 120px);
  }

  .problems-section,
  .benefits-section,
  .examples-section {
    padding: 60px 0;
  }

  .section-title {
    font-size: 1.5rem;
  }

  .problems-grid,
  .benefits-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .problem-card,
  .benefit-item {
    padding: 1.5rem;
  }

  .examples-grid {
    grid-template-columns: 1fr;
  }

  .example-card {
    padding: 1.5rem;
  }

  .final-cta-content h2 {
    font-size: 2rem;
  }

  .final-cta-content p {
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .main-content {
    min-height: calc(100vh - 100px);
  }

  .problems-section,
  .benefits-section,
  .examples-section,
  .final-cta-section {
    padding: 40px 0;
  }

  .section-title {
    font-size: 1.5rem;
  }

  .problem-icon,
  .benefit-icon {
    font-size: 2.5rem;
  }

  .final-cta-content h2 {
    font-size: 1.5rem;
  }

  .final-cta-content p {
    font-size: 0.95rem;
  }

  .final-cta-btn {
    padding: 14px 24px;
    font-size: 1rem;
  }
}
</style>
