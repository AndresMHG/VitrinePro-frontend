---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Auth components
import AuthLayout from '../components/auth/AuthLayout.astro';
import AuthCard from '../components/auth/AuthCard.astro';
import AuthFooter from '../components/auth/AuthFooter.astro';

// Common components
import FormInput from '../components/common/FormInput.astro';
import Button from '../components/common/Button.astro';
---

<Layout title="Login">
  <Header />
  <AuthLayout>
    <AuthCard
      title="Entrar en tu cuenta"
      description="¡Bienvenido de vuelta! Accede a tu vitrine."
      submitText="Entrar"
    >
      <FormInput
        id="email"
        label="E-mail"
        type="email"
        placeholder="tu@email.com"
        required
      />
      
      <FormInput
        id="password"
        label="Contraseña"
        type="password"
        placeholder="Tu contraseña"
        required
      />

      <div class="form-options">
        <label class="checkbox-label">
          <input type="checkbox" name="remember" class="checkbox-input" />
          <span>Recuérdame</span>
        </label>
        <a href="/recuperar-senha" class="forgot-link">¿Olvidaste tu contraseña?</a>
      </div>

      <Button variant="primary" fullWidth type="submit">Entrar</Button>
    </AuthCard>

    <AuthFooter>
      ¿No tienes cuenta? <a href="/cadastro">Crea una ahora</a>
    </AuthFooter>
  </AuthLayout>
  <Footer />
</Layout>

<style>
  .form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    cursor: pointer;
    color: var(--text-secondary);
  }

  .checkbox-input {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: var(--primary);
  }

  .forgot-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
  }

  .forgot-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 480px) {
    .form-options {
      flex-direction: column;
      gap: var(--space-md);
      text-align: center;
    }
  }
</style>
