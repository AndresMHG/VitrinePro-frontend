---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AuthLayout from '../components/auth/AuthLayout.astro';
import AuthCard from '../components/auth/AuthCard.astro';
import FormInput from '../components/common/FormInput.astro';
import Button from '../components/common/Button.astro';
---

<Layout title="Recuperar Contraseña - VitrinePro">
  <Header />

  <AuthLayout>
    <AuthCard title="Recuperar Contraseña">
      <form method="POST" class="recovery-form">
        <FormInput
          id="email"
          name="email"
          type="email"
          label="Correo Electrónico"
          placeholder="tu@email.com"
          required
        />
        <Button type="submit" variant="primary" fullWidth>
          Enviar Instrucciones
        </Button>
      </form>

      <div class="recovery-footer">
        <p>
          ¿Recordaste tu contraseña?
          <a href="/login">Volver al Login</a>
        </p>
      </div>
    </AuthCard>
  </AuthLayout>

  <Footer />
</Layout>

<style>
  .recovery-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .recovery-footer {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .recovery-footer p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin: 0;
  }

  .recovery-footer a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    transition: color var(--transition-base);
  }

  .recovery-footer a:hover {
    color: var(--primary-dark);
  }
</style>