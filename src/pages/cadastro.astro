<style>
.main-content {
  min-height: calc(100vh - 140px);
  background:
    radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.3) 0%, transparent 50%),
    #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
  box-sizing: border-box;
}

.register-section {
  padding: 0;
}

.register-card {
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  padding: 3rem;
  max-width: 520px;
  width: 500px;
  margin: 0 auto;
  box-sizing: border-box;
}

.register-header {
  text-align: center;
  margin-bottom: 2rem;
}

.register-header h1 {
  font-size: 2rem;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 0.5rem;
}

.register-header p {
  color: #64748b;
  font-size: 1rem;
  line-height: 1.5;
}

.register-form {
  margin-bottom: 2rem;
}

.form-row {
  display: flex;
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.form-group {
  flex: 1;
  margin-bottom: 1.5rem;
}

.form-group label {
  display: block;
  font-size: 0.9rem;
  font-weight: 600;
  color: #374151;
  margin-bottom: 0.5rem;
}

.form-group input {
  width: 100%;
  padding: 0.875rem 1rem;
  border: 2px solid #e5e7eb;
  border-radius: 8px;
  font-size: 1rem;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
  box-sizing: border-box;
}

.form-group input:focus {
  outline: none;
  border-color: #0A66C2;
  box-shadow: 0 0 0 3px rgba(10, 102, 194, 0.1);
}

.form-options {
  margin-bottom: 1.5rem;
}

.checkbox-label {
  display: flex;
  align-items: flex-start;
  font-size: 0.9rem;
  color: #374151;
  cursor: pointer;
  line-height: 1.4;
  gap: 0.75rem;
}

.checkbox-text {
  flex: 1;
  line-height: 1.4;
}

.terms-checkbox {
  width: 20px;
  height: 20px;
  margin: 0;
  flex-shrink: 0;
  cursor: pointer;
  accent-color: #0A66C2;
}

.terms-link {
  color: #0A66C2;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.3s ease;
}

.terms-link:hover {
  color: #004182;
}

.register-btn {
  width: 100%;
  background: #0A66C2;
  color: white;
  border: none;
  padding: 0.875rem 1rem;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.register-btn:hover {
  background: #004182;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(10, 102, 194, 0.3);
}

.divider {
  position: relative;
  text-align: center;
  margin: 2rem 0;
  color: #64748b;
  font-size: 0.9rem;
}

.divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1px;
  background: #e5e7eb;
}

.divider span {
  background: #fff;
  padding: 0 1rem;
  position: relative;
  z-index: 1;
}

.social-login {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  margin-bottom: 2rem;
}

.social-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  padding: 0.875rem 1rem;
  border: 2px solid #e5e7eb;
  border-radius: 8px;
  background: #fff;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
}

.social-btn:hover {
  border-color: #0A66C2;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(10, 102, 194, 0.1);
}

.google-btn:hover {
  border-color: #4285F4;
  box-shadow: 0 4px 12px rgba(66, 133, 244, 0.1);
}

.linkedin-btn:hover {
  border-color: #0077B5;
  box-shadow: 0 4px 12px rgba(0, 119, 181, 0.1);
}

.login-link {
  text-align: center;
}

.login-link p {
  color: #64748b;
  font-size: 0.9rem;
  margin: 0;
}

.login-link a {
  color: #0A66C2;
  text-decoration: none;
  font-weight: 600;
  transition: color 0.3s ease;
}

.login-link a:hover {
  color: #004182;
}

/* Responsive */
@media (max-width: 1200px) {
  .register-card {
    width: 500px;
    padding: 2.75rem;
  }

  .form-row {
    gap: 0.8rem;
  }
}

@media (max-width: 1024px) {
  .main-content {
    padding: 20px 0;
  }

  .register-card {
    max-width: 480px;
    padding: 2.5rem;
  }

  .form-row {
    gap: 0.75rem;
  }
}

@media (max-width: 900px) {
  .register-card {
    max-width: 450px;
    padding: 2.25rem;
  }

  .form-row {
    gap: 0.7rem;
  }
}

@media (max-width: 768px) {
  .main-content {
    padding: 20px 0;
    min-height: calc(100vh - 120px);
  }

  .register-card {
    padding: 2rem;
    margin: 0 20px;
    max-width: 420px;
  }

  .register-header h1 {
    font-size: 1.5rem;
  }

  .form-row {
    flex-direction: column;
    gap: 0;
  }

  .social-login {
    gap: 0.5rem;
  }

  .checkbox-label {
    font-size: 0.85rem;
  }

  .terms-checkbox {
    width: 18px;
    height: 18px;
  }
}

@media (max-width: 600px) {
  .register-card {
    padding: 1.75rem;
    margin: 0 15px;
    max-width: 100%;
  }

  .register-header h1 {
    font-size: 1.4rem;
  }

  .register-header p {
    font-size: 0.9rem;
  }

  .form-group input {
    padding: 0.75rem 0.875rem;
    font-size: 0.9rem;
  }
}

@media (max-width: 480px) {
  .main-content {
    padding: 10px 15px;
    min-height: calc(100vh - 100px);
  }

  .register-card {
    padding: 1.5rem;
    margin: 0;
    max-width: 100%;
    width: calc(100vw - 30px);
  }

  .register-header h1 {
    font-size: 1.3rem;
  }

  .register-btn,
  .social-btn {
    padding: 0.75rem 0.875rem;
    font-size: 0.9rem;
  }

  .checkbox-label {
    font-size: 0.8rem;
  }

  .terms-checkbox {
    width: 16px;
    height: 16px;
  }
}

@media (max-width: 360px) {
  .main-content {
    padding: 10px 10px;
  }

  .register-card {
    padding: 1.25rem;
    width: calc(100vw - 20px);
  }

  .register-header h1 {
    font-size: 1.2rem;
  }

  .register-header p {
    font-size: 0.85rem;
  }

  .form-group input {
    padding: 0.7rem 0.8rem;
    font-size: 0.85rem;
  }

  .register-btn,
  .social-btn {
    padding: 0.7rem 0.8rem;
    font-size: 0.85rem;
  }

  .checkbox-label {
    font-size: 0.75rem;
  }

  .terms-checkbox {
    width: 14px;
    height: 14px;
  }
}
</style>