---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Auth components
import AuthLayout from '../components/auth/AuthLayout.astro';
import AuthCard from '../components/auth/AuthCard.astro';

// Login Form Component
import LoginForm from '../components/auth/LoginForm.vue';
---

<Layout title="Login">
  <Header />
  <AuthLayout>
    <AuthCard
      title="Entrar en tu cuenta"
      description="Â¡Bienvenido de vuelta! Accede a tu vitrine."
      submitText="Entrar"
    >
      <LoginForm client:load />
    </AuthCard>
  </AuthLayout>
  <Footer />
</Layout>

<style>
  .form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    cursor: pointer;
    color: var(--text-secondary);
  }

  .checkbox-input {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: var(--primary);
  }

  .forgot-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
  }

  .forgot-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 480px) {
    .form-options {
      flex-direction: column;
      gap: var(--space-md);
      text-align: center;
    }
  }
</style>
