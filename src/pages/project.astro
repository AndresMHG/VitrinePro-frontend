      <h3>Security Measures</h3>
      <ul>
        <li>OWASP Top 10 compliance</li>
        <li>JWT token implementation with refresh rotation</li>
        <li>Rate limiting and DDoS protection</li>
        <li>Automated vulnerability scanning</li>
        <li>Security information and event management (SIEM)</li>
      </ul>
    `,
    tech: ['OWASP', 'JWT', 'SSL/TLS', 'SIEM', 'AWS WAF'],
    duration: '4 months',
    team: '4 security experts',
    link: 'https://example-security-audit.com'
  },
  'architecture': {
    category: 'Projetos pessoais',
    title: 'Modern Residential Complex',
    subtitle: 'Sustainable urban living design for 200+ residents',
    images: [
      'https://picsum.photos/id/35/800/600',
      'https://picsum.photos/id/36/800/600',
      'https://picsum.photos/id/37/800/600'
    ],
    description: `
