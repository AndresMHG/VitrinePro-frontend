---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getProjectIds, getProject } from '../data/projects';

export async function getStaticPaths() {
  return getProjectIds().map(id => ({ params: { id } }));
}

const { id } = Astro.params;
const project = getProject(id!);

if (!project) {
  return Astro.redirect('/profile');
}
---

<Layout title={`${project.title} - VitrinePro`}>
  <Header />
  
  <main class="project-page">
    <div class="container">
      <!-- Back Button -->
      <a href="/profile" class="back-link">← Volver al Perfil</a>

      <!-- Project Header -->
      <header class="project-header">
        <span class="project-category">{project.category}</span>
        <h1 class="project-title">{project.title}</h1>
        <p class="project-description-intro">{project.description}</p>
      </header>

      <!-- Gallery -->
      <div class="gallery-container">
        <img src={project.images[0]} alt={project.title} class="gallery-main" loading="lazy" />
      </div>

      <!-- Details -->
      <div class="details-grid">
        <div class="detail-block">
          <h3>Tecnologías</h3>
          <div class="tech-tags">
            {project.tech.map(t => (
              <span class="tag">{t}</span>
            ))}
          </div>
        </div>
        <div class="detail-block">
          <h3>Duración</h3>
          <p>{project.duration}</p>
        </div>
        <div class="detail-block">
          <h3>Equipo</h3>
          <p>{project.team}</p>
        </div>
      </div>

      <!-- CTA -->
      {project.link && (
        <div class="cta-block">
          <a href={project.link} target="_blank" class="btn-primary">
            Ver Proyecto Completo →
          </a>
        </div>
      )}
    </div>
  </main>

  <Footer />
</Layout>
