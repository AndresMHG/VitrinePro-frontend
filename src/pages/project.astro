  },
  'ai-ml': {
    category: 'Artigos publicados',
    title: 'AI-Powered Recommendation Engine',
    subtitle: 'Machine learning system for personalized content delivery',
    images: [
      'https://picsum.photos/id/45/800/600',
      'https://picsum.photos/id/46/800/600',
      'https://picsum.photos/id/47/800/600'
    ],
    description: `
      <h3>Problem Statement</h3>
      <p>The content platform was struggling with user engagement, with 70% of users abandoning the platform within the first session due to irrelevant content recommendations.</p>

