<style>
  .project-page {
    padding: 3rem 0;
    min-height: 80vh;
  }

  .back-link {
    display: inline-block;
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    margin-bottom: 2rem;
    transition: all var(--transition-base);
  }

  .back-link:hover {
    transform: translateX(-4px);
  }

  .project-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .project-category {
    display: inline-block;
    background: rgba(10, 102, 194, 0.1);
    color: var(--primary);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-full);
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 1rem;
  }

  .project-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .project-description-intro {
    font-size: 1.1rem;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .gallery-container {
    display: flex;
    justify-content: center;
    margin: 3rem 0;
  }

  .gallery-main {
    width: 100%;
    max-width: 800px;
    height: 400px;
    object-fit: cover;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
  }

  .details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
    padding: 2rem;
    background: var(--bg-light);
    border-radius: var(--radius-lg);
  }

  .detail-block h3 {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 0.75rem 0;
  }

  .detail-block p {
    color: var(--text-secondary);
    margin: 0;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: rgba(10, 102, 194, 0.1);
    color: var(--primary);
    padding: 0.4rem 0.8rem;
    border-radius: var(--radius-full);
    font-size: 0.8rem;
    font-weight: 500;
  }

  .cta-block {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }

  .btn-primary {
    display: inline-block;
    background: var(--gradient);
    color: white;
    padding: 1rem 2rem;
    border-radius: var(--radius-lg);
    text-decoration: none;
    font-weight: 600;
    transition: all var(--transition-base);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  @media (max-width: 768px) {
    .project-title {
      font-size: 1.8rem;
    }

    .gallery-main {
      height: 300px;
    }

    .details-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .project-page {
      padding: 1.5rem 0;
    }

    .project-title {
      font-size: 1.5rem;
    }

    .gallery-main {
      height: 250px;
    }

    .details-grid {
      padding: 1rem;
    }
  }
</style>