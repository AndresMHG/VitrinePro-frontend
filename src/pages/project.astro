  'mobile': {
    category: 'Example Projects',
    title: 'Mobile App Development',
    subtitle: 'Cross-platform mobile application for healthcare management',
    images: [
      'https://picsum.photos/id/25/800/600',
      'https://picsum.photos/id/26/800/600',
