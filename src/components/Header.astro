---
import { Font } from 'astro:assets';
---
<Font cssVariable='--font-inter' preload />

<header class="header">
  <div class="header-content">
    <div class="logo">
      <a href="/" class="logo-link">
        <img src="/icon.svg" alt="VitrinePro Logo" class="logo-img" draggable="false" />
      </a>
    </div>
    <div class="actions">
      <a href="/login" class="login-link">Entrar</a>
      <a href="/cadastro" class="signup-link">Cadastrar</a>
    </div>
  </div>
</header>

<style>
body {
  font-family: var(--font-inter);
  background: #f5f7fa;
  margin: 0;
}

/* Header */
.header {
  background: #ffffff;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  height: 70px;
}

.logo {
  display: flex;
  align-items: center;
}

.logo-link {
  text-decoration: none;
  cursor: pointer;
}

.logo-img {
  height: 30px;
  user-select: none;
}

.actions {
  display: flex;
  gap: 12px;
  align-items: center;
}

.login-link, .signup-link {
  color: #0A66C2;
  font-size: 15px;
  font-weight: 500;
  text-decoration: none;
  user-select: none;
  padding: 10px 20px;
  border-radius: 8px;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.signup-link {
  background: #0A66C2;
  color: white;
}

.signup-link:hover {
  background: #004182;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(10, 102, 194, 0.3);
}

.login-link:hover {
  background: #f0f8ff;
  transform: translateY(-1px);
}

/* Responsive */
@media (max-width: 768px) {
  .header-content {
    padding: 0 15px;
    height: 60px;
  }

  .logo-img {
    height: 26px;
  }

  .login-link, .signup-link {
    padding: 8px 16px;
    font-size: 14px;
  }

  .actions {
    gap: 8px;
  }
}

@media (max-width: 480px) {
  .header-content {
    padding: 0 10px;
    height: 55px;
  }

  .logo-img {
    height: 24px;
  }

  .login-link, .signup-link {
    padding: 6px 12px;
    font-size: 13px;
  }
}
</style>
