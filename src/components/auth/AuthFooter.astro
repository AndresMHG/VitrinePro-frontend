---
import Button from '../common/Button.astro';

interface Props {
  loginLink?: string;
  signupLink?: string;
  class?: string;
}

const {
  loginLink = '/login',
  signupLink = '/cadastro',
  class: className = ''
} = Astro.props;
---

<div class={`auth-divider ${className}`.trim()}>
  <span>o</span>
</div>

<div class="auth-social">
  <button class="social-btn google-btn" type="button" aria-label="Entrar con Google">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
      <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
      <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
      <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
      <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l2.85 2.22c.87-2.6 3.3-4.51 6.15-4.51z"/>
    </svg>
    Google
  </button>
  <button class="social-btn github-btn" type="button" aria-label="Entrar con GitHub">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v 3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
    </svg>
    GitHub
  </button>
</div>

<div class="auth-toggle">
  <p>
    <slot />
  </p>
</div>

<style>
  .auth-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: var(--space-lg) 0;
    color: var(--text-secondary);
  }

  .auth-divider::before,
  .auth-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border);
  }

  .auth-divider span {
    margin: 0 var(--space-md);
    font-size: 0.875rem;
  }

  .auth-social {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    padding: 0.75rem var(--space-md);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    background: white;
    color: var(--text-primary);
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .social-btn:hover {
    background: var(--bg-light);
    border-color: var(--primary);
    transform: translateY(-1px);
  }

  .social-btn svg {
    width: 20px;
    height: 20px;
  }

  .google-btn svg path {
    fill: currentColor;
  }

  .github-btn svg {
    fill: currentColor;
  }

  .auth-toggle {
    text-align: center;
    font-size: 0.95rem;
    color: var(--text-secondary);
  }

  .auth-toggle p {
    margin: 0;
  }

  .auth-toggle a {
    color: var(--primary);
    font-weight: 600;
    text-decoration: none;
  }

  .auth-toggle a:hover {
    text-decoration: underline;
  }

  @media (max-width: 480px) {
    .auth-social {
      grid-template-columns: 1fr;
    }
  }
</style>
