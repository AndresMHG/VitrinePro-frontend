---
interface Props {
  title: string;
  images: string[];
  description: string;
  tech: string[];
  duration: string;
  team: string;
  link?: string;
  class?: string;
}

const {
  title,
  images,
  description,
  tech,
  duration,
  team,
  link,
  class: className = ''
} = Astro.props;
---

<article class={`project-detail ${className}`.trim()}>
  <div class="project-gallery">
    <div class="gallery-main">
      <img src={images[0]} alt={title} loading="lazy" />
    </div>
    {images.length > 1 && (
      <div class="gallery-thumbs">
        {images.map((img, i) => (
          <button 
            class={`thumb ${i === 0 ? 'active' : ''}`}
            data-index={i}
            aria-label={`Ver imagen ${i + 1}`}
          >
            <img src={img} alt={`${title} imagen ${i + 1}`} loading="lazy" />
          </button>
        ))}
      </div>
    )}
  </div>

  <div class="project-content">
    <div class="project-header">
      <h1 class="project-title">{title}</h1>
    </div>

    <div class="project-description">
      <Fragment set:html={description} />
    </div>

    <div class="project-meta">
      <div class="meta-item">
        <strong>Duración:</strong> {duration}
      </div>
      <div class="meta-item">
        <strong>Equipo:</strong> {team}
      </div>
    </div>

    {tech.length > 0 && (
      <div class="project-tech">
        <h3>Tecnologías Utilizadas</h3>
        <div class="tech-list">
          {tech.map((t) => (
            <span class="tech-tag">{t}</span>
          ))}
        </div>
      </div>
    )}

    {link && (
      <div class="project-link">
        <a href={link} target="_blank" rel="noopener noreferrer" class="btn-link">
          Visitar Proyecto →
        </a>
      </div>
    )}
  </div>
</article>

<style>
  .project-detail {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin: 2rem 0;
  }

  .project-gallery {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .gallery-main {
    width: 100%;
    height: 400px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: var(--bg-muted);
  }

  .gallery-main img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gallery-thumbs {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
    gap: 0.5rem;
  }

  .thumb {
    width: 80px;
    height: 80px;
    border: 2px solid var(--border);
    border-radius: var(--radius-md);
    padding: 0;
    cursor: pointer;
    overflow: hidden;
    transition: all var(--transition-base);
    background: white;
  }

  .thumb:hover {
    border-color: var(--primary);
  }

  .thumb.active {
    border-color: var(--primary);
    box-shadow: 0 0 0 2px white, 0 0 0 4px var(--primary);
  }

  .thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .project-header {
    margin-bottom: 1rem;
  }

  .project-title {
    font-size: 2rem;
    color: var(--text-primary);
    margin: 0;
  }

  .project-description {
    color: var(--text-secondary);
    line-height: 1.8;
    font-size: 1rem;
  }

  .project-description :global(h3) {
    color: var(--text-primary);
    font-size: 1.25rem;
    margin: 1.5rem 0 0.5rem 0;
  }

  .project-description :global(h3:first-child) {
    margin-top: 0;
  }

  .project-description :global(p) {
    margin: 0.5rem 0;
  }

  .project-description :global(ul) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .project-description :global(li) {
    margin: 0.5rem 0;
  }

  .project-meta {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--bg-light);
    border-radius: var(--radius-lg);
  }

  .meta-item {
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  .meta-item strong {
    color: var(--text-primary);
    display: block;
    margin-bottom: 0.25rem;
  }

  .project-tech {
    margin-top: 1rem;
  }

  .project-tech h3 {
    margin: 0 0 1rem 0;
    color: var(--text-primary);
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    display: inline-block;
    background: var(--gradient);
    color: white;
    padding: 0.35rem 0.75rem;
    border-radius: var(--radius-full);
    font-size: 0.85rem;
    font-weight: 600;
  }

  .project-link {
    margin-top: 1rem;
  }

  .btn-link {
    display: inline-block;
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    transition: all var(--transition-base);
  }

  .btn-link:hover {
    color: var(--primary-dark);
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .project-detail {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .gallery-main {
      height: 300px;
    }

    .project-title {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 640px) {
    .project-meta {
      grid-template-columns: 1fr;
    }

    .project-title {
      font-size: 1.5rem;
    }

    .gallery-thumbs {
      grid-template-columns: repeat(auto-fit, minmax(60px, 1fr));
    }

    .thumb {
      width: 60px;
      height: 60px;
    }
  }
</style>
