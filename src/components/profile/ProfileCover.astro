---
interface Props {
  coverImage?: string;
}

const { coverImage = 'https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?q=80&w=1600&auto=format&fit=crop' } = Astro.props;
---

<section class="profile-cover">
  <div class="cover-image" role="img" aria-label="Profile cover image">
    <img src={coverImage} alt="Cover" />
  </div>
</section>

<style>
  .profile-cover {
    background: var(--bg-lighter);
  }

  .cover-image {
    height: 180px;
    position: relative;
    overflow: hidden;
    border-bottom: 1px solid var(--border);
  }

  .cover-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  @media (max-width: 768px) {
    .cover-image {
      height: 140px;
    }
  }

  @media (max-width: 480px) {
    .cover-image {
      height: 120px;
    }
  }
</style>
