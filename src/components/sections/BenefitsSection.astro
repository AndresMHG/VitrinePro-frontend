---
interface Benefit {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  benefits: Benefit[];
  title?: string;
}

const {
  benefits,
  title = 'Por que escolher VitrinePro?'
} = Astro.props;
---

<section class="benefits-section">
  <div class="container">
    <h2 class="section-title">{title}</h2>
    <div class="benefits-grid">
      {benefits.map(benefit => (
        <div class="benefit-item">
          <div class="benefit-icon">{benefit.icon}</div>
          <h3>{benefit.title}</h3>
          <p>{benefit.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .benefits-section {
    padding: 40px 0;
    background: var(--vp-muted, #f5f7fa);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--vp-text, #111827);
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: linear-gradient(135deg, var(--vp-primary, #0A66C2), var(--vp-secondary, #004182));
    border-radius: 2px;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .benefit-item {
    background: var(--vp-bg, #ffffff);
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
    border: 1px solid var(--vp-border, #e5e7eb);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .benefit-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  }

  .benefit-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .benefit-item h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--vp-text, #111827);
    margin-bottom: 0.5rem;
  }

  .benefit-item p {
    color: var(--vp-subtext, #6b7280);
    line-height: 1.5;
    font-size: 0.9rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .benefits-section {
      padding: 60px 0;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .benefits-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .benefit-item {
      padding: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .benefits-section {
      padding: 40px 0;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .benefit-icon {
      font-size: 2.5rem;
    }
  }
</style>
