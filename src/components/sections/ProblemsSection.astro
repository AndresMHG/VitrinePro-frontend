---
interface Problem {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  problems: Problem[];
  title?: string;
}

const {
  problems,
  title = 'Destaque suas experiÃªncias'
} = Astro.props;
---

<section class="problems-section">
  <div class="container">
    <h2 class="section-title">{title}</h2>
    <div class="problems-grid">
      {problems.map(problem => (
        <div class="problem-card">
          <div class="problem-icon">{problem.icon}</div>
          <h3>{problem.title}</h3>
          <p>{problem.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .problems-section {
    padding: 40px 0;
    background: var(--vp-bg, #ffffff);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--vp-text, #111827);
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: linear-gradient(135deg, var(--vp-primary, #0A66C2), var(--vp-secondary, #004182));
    border-radius: 2px;
  }

  .problems-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .problem-card {
    background: var(--vp-bg, #ffffff);
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
    border: 1px solid var(--vp-border, #e5e7eb);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-align: center;
  }

  .problem-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .problem-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .problem-card h3 {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--vp-text, #111827);
    margin-bottom: 1rem;
  }

  .problem-card p {
    color: var(--vp-subtext, #6b7280);
    line-height: 1.6;
    font-size: 0.95rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .problems-section {
      padding: 60px 0;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .problems-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .problem-card {
      padding: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .problems-section {
      padding: 40px 0;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .problem-icon {
      font-size: 2.5rem;
    }
  }
</style>
