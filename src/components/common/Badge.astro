---
interface Props {
  variant?: 'primary' | 'secondary' | 'success' | 'warning' | 'danger';
  size?: 'sm' | 'md' | 'lg';
  label: string;
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  label,
  class: className = ''
} = Astro.props;

const sizeClass = `badge--${size}`;
const variantClass = `badge--${variant}`;
---

<span class={`badge ${variantClass} ${sizeClass} ${className}`.trim()}>
  {label}
</span>

<style is:global>
  .badge {
    display: inline-block;
    font-weight: 700;
    border-radius: var(--radius-full);
    white-space: nowrap;
  }

  /* Sizes */
  .badge--sm {
    font-size: 0.75rem;
    padding: 0.25rem 0.6rem;
  }

  .badge--md {
    font-size: 0.875rem;
    padding: 0.35rem 0.75rem;
  }

  .badge--lg {
    font-size: 1rem;
    padding: 0.5rem 1rem;
  }

  /* Variants */
  .badge--primary {
    background: var(--gradient);
    color: white;
  }

  .badge--secondary {
    background: var(--bg-light);
    color: var(--primary);
  }

  .badge--success {
    background: #dcfce7;
    color: #15803d;
  }

  .badge--warning {
    background: #fef3c7;
    color: #92400e;
  }

  .badge--danger {
    background: #fee2e2;
    color: #991b1b;
  }
</style>
