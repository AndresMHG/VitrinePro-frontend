---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'VitrinePro' } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="VitrinePro - Plataforma de portafolios profesionales" />
		<link rel="icon" type="image/svg+xml" href="/VitrinePro-frontend/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | VitrinePro</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		z-index: -1;
	}
</style>
